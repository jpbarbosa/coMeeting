<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("list", :default => "List")}", meetings_path  %></li>
      <li><%= link_to "#{t("meeting.new", :default => "New Meeting")}", new_meeting_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("meetings", :default => "Meetings")  %></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.meeting.subject", :default => t("activerecord.labels.subject", :default => "Subject")) %>
          </th>
                    <th><%= t("created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @meetings.each do |meeting| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= meeting.id %>
          </td>
                    <td>
            <%= link_to meeting.subject, meeting_path(meeting.link_admin) %>
          </td>
                    <td>
            <%= meeting.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("show", :default => "Show")}", meeting_path(meeting.link_admin) %> |
            <%= link_to "#{t("edit", :default => "Edit")}", edit_meeting_path(meeting.link_admin) %> |
            <%= link_to "#{t("delete", :default => "Delete")}", meeting_path(meeting.link_admin), :method => :delete, :confirm => "#{t("confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
