
  <div class="group">
    <%= f.label :subject, t("activerecord.attributes.meeting.subject", :default => "Subject"), :class => :label %>
    <%= f.text_field :subject, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :local, t("activerecord.attributes.meeting.local", :default => "Local"), :class => :label %>
    <%= f.text_field :local, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :meeting_date, t("activerecord.attributes.meeting.meeting_date", :default => "Meeting date"), :class => :label %>
    <input class="date_picker" id="meeting_date" name="meeting[meeting_date]" type="text" size="10" value="<%=@current_date %>"/>
      <p id="date"></p>
        <script>
        $('#meeting_date').keyup(function() {
            $('#date').DatePickerSetDate($('#meeting_date').val(), true);
        });

      </script>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :meeting_time, t("activerecord.attributes.meeting.meeting_time", :default => "Meeting time"), :class => :label %>
    <%= f.time_select :meeting_time, :minute_step => 15, :class => 'text_field' %>
    <%= f.time_zone_select :timezone, nil, :default => "Lisbon" %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :duration, t("activerecord.attributes.meeting.duration", :default => "Duration"), :class => :label %>
    <%= f.time_select :duration, :minute_step => 15,:default => Time.now.change(:hour => 0), :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <input type="hidden" value="0" id="theValue" />
		<div id="myDiv">
            <%= f.label :topics, t("activerecord.attributes.meeting.topics", :default => "Topics"), :class => :label %>
			<br/>
			<div id="my0Div">
				<%= f.text_field :topics, :class => "topic", :value => "" %>  <a href="#" onclick=" return removeElement(my0Div);"> <img valign="top" alt="Cross" src="/assets/cross.png"> </a><p></p>
			</div>
		</div>
		<a href="#" onclick="return addElement();">+</a>
    <span class="description">Add a new Topic</span>
  </div>

  <div class="group">
    <%= f.label :extra_info, t("activerecord.attributes.meeting.extra_info", :default => "Extra info"), :class => :label %>
    <%= f.text_field :extra_info, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :admin, t("activerecord.attributes.meeting.admin", :default => "Email"), :class => :label %>
    <%= f.email_field :admin, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("/assets/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Create") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), '/', :class => "text_button_padding link_button" %>
</div>