<% if @admin %>
	<%= text_area :minutes, nil, :id => 'minutes', :rows => 30, :value => @meeting.minutes, :onkeyup => "updateMinutes('#{@meeting.link_admin}');" %>
<% else %>
	<%= text_area :minutes, nil, :id => 'minutes', :rows => 30, :value => @minutes, :class => "disabled", :disabled => true %>
<% end %>