
  <div class="group">
    <%= f.label :subject, t("form.subject", :default => "Subject"), :class => :label %>
    <%= f.text_field :subject, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :local, t("form.place", :default => "Place"), :class => :label %>
    <%= f.text_field :local, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :meeting_date, t("form.date", :default => "Date"), :class => :label %>
    <input class="date_picker" id="meeting_date" name="meeting[meeting_date]" type="text" size="10" value="<%=@meeting.meeting_date %>"/>
      <p id="date"></p>
        <script>
        $('#meeting_date').keyup(function() {
            $('#date').DatePickerSetDate($('#meeting_date').val(), true);
        });

      </script>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :meeting_time, t("form.time", :default => "Time"), :class => :label %>
    <%= f.time_select :meeting_time, :minute_step => 15, :class => 'text_field' %>
    <%= f.time_zone_select :timezone, nil, :default => "Lisbon" %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :duration, t("form.duration", :default => "Duration"), :class => :label %>
    <%= f.text_field :duration, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <input type="hidden" value="0" id="theValue" />
		<div id="myDiv">
            <%= f.label :topics, t("topics", :default => "Topics"), :class => :label %>
			<br/>
            <% num = 0 %>
            <% @meeting.topics.each do |topic| -%>
                <% name_id = "my" + num.to_s + "Div" %>
                <div id=<%=name_id %>>
                    <input value="<%=topic %>"class="topic" type="text" size="30" name ="topics_<%= num %>">  <a href="#" onclick="removeElement(<%=name_id %>); return false;"> <img valign="top" alt="" src="/assets/icons/cross.png"> </a><p></p>
                </div>
                <% num = num + 1 %>
            <% end -%>
		</div>
		<a href="#" onclick="addElement(); return false">+</a>
    <span class="description">Add a new Topic</span>
  </div>

  <script type="text/javascript">
    setValue(<%= (num -1) %>);
  </script>

  <div class="group">
    <%= f.label :extra_info, t("form.extra_info", :default => "Extra info"), :class => :label %>
    <%= f.text_field :extra_info, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

  <div class="group">
    <%= f.label :admin, t("form.email", :default => "Email"), :class => :label %>
    <%= f.email_field :admin, :class => 'text_field' %>
    <span class="description">Ex: a simple text</span>
  </div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("/assets/icons/tick.png") %> <%= t("save", :default => "Save Changes") %>
  </button>
  <span class="text_button_padding"><%= t("or", :default => "or") %></span>
	<%= link_to t("cancel", :default => "Cancel"), :back, :class => "text_button_padding link_button" %>
</div>