<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", meetings_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_meeting_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", meeting_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">

        <p>
          <b><%= t("activerecord.attributes.meeting.subject", :default => t("activerecord.labels.subject", :default => "Subject")) %>:</b>
          <%= @meeting.subject %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.meeting.local", :default => t("activerecord.labels.local", :default => "Local")) %>:</b>
          <%= @meeting.local %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.meeting.meeting_date", :default => t("activerecord.labels.meeting_date", :default => "Meeting date")) %>:</b>
          <%= @meeting.meeting_date %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.meeting.meeting_time", :default => t("activerecord.labels.meeting_time", :default => "Meeting time")) %>:</b>
          <%= @meeting.meeting_time %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.meeting.duration", :default => t("activerecord.labels.duration", :default => "Duration")) %>:</b>
          <%= @meeting.duration %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.meeting.topics", :default => t("activerecord.labels.topics", :default => "Topics")) %>:</b>
          <%= @meeting.topics %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.meeting.extra_info", :default => t("activerecord.labels.extra_info", :default => "Extra info")) %>:</b>
          <%= @meeting.extra_info %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.meeting.admin", :default => t("activerecord.labels.admin", :default => "Admin")) %>:</b>
          <%= @meeting.admin %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.meeting.proceedings", :default => t("activerecord.labels.proceedings", :default => "Proceedings")) %>:</b>
          <%= @meeting.proceedings %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_meeting_path(@meeting), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), meeting_path(@meeting), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>