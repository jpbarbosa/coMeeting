<div class="block" id="block-info">
  <div class="secondary-navigation">
    <ul class="wat-cf">
        <!-- todo: implement js scroll by tag -->
      <li class="active"> <a href="#block-info" >Info</a></li>
      <li class="first"> <a href="#block-topics" >Topics</a></li>
      <li> <a href="#block-topics" >Topics</a></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">

      <p>
        <b><%= t("activerecord.attributes.meeting.subject", :default => t("activerecord.labels.subject", :default => "Subject")) %>
          :</b>
        <%= @meeting.subject %>
      </p>

      <p>
        <b><%= t("activerecord.attributes.meeting.local", :default => t("activerecord.labels.local", :default => "Local")) %>
          :</b>
        <%= @meeting.local %>
      </p>

      <p>
        <b><%= t("activerecord.attributes.meeting.meeting_date", :default => t("activerecord.labels.meeting_date", :default => "Meeting date")) %>
          :</b>
        <%= @meeting.meeting_date %>
      </p>

      <p>
        <b><%= t("activerecord.attributes.meeting.meeting_time", :default => t("activerecord.labels.meeting_time", :default => "Meeting time")) %>
          :</b>
        <%= @meeting.meeting_time %>
      </p>

      <p>
        <b><%= t("activerecord.attributes.meeting.duration", :default => t("activerecord.labels.duration", :default => "Duration")) %>
          :</b>
        <%= @meeting.duration %>
      </p>

      <p>
        <b><%= t("activerecord.attributes.meeting.extra_info", :default => t("activerecord.labels.extra_info", :default => "Extra info")) %>
          :</b>
        <%= @meeting.extra_info %>
      </p>

      <p>
        <b><%= t("activerecord.attributes.meeting.admin", :default => t("activerecord.labels.admin", :default => "Admin")) %>
          :</b>
        <%= @meeting.admin %>
      </p>

      <p>
        <b><%= t("activerecord.attributes.meeting.proceedings", :default => t("activerecord.labels.proceedings", :default => "Proceedings")) %>
          :</b>
        <%= @meeting.proceedings %>
      </p>

      <div class="wat-cf">
        <%= link_to image_tag("/assets/icons/application_edit.png")+ " " + t("edit", :default=> "Edit"), edit_meeting_path(@meeting.link_admin), :class => "button" %>
        <%= link_to image_submit_tag("/assets/icons/cross.png", :alt => "") + " " + t("delete", :default => "Delete"), meeting_path(@meeting.link_admin), :method => :delete, :class => "button", :confirm => "#{t("confirm", :default => "Are you sure?")}" %>
		<%= link_to("Del", {}, {:onclick => "return confirm('Are you sure?')", :method => :delete, :controller => "meetings", :action => "destroy", :remote => true}) %>
      </div>
    </div>
  </div>

</div>

<div class="block" id="block-topics">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><a href="#block-info">Info</a></li>
      <li class="active"><a href="#block-topics">Topics</a></li>
      <li><%= link_to "#{t("show", :default => "Show")}", meeting_path %></li>
    </ul>
  </div>

  <div class="content">
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">Topic</th>

          <th class="last">&nbsp;</th>
        </tr>
        <% @meeting.topics.each do |topic| -%>
            <tr class="<%= cycle("odd", "even") %>">
              <td>
                <%= topic %>
              </td>
              <td class="last">
                <%= link_to "#{t("edit", :default => "Edit")}", '/' %> |
                <%= link_to "#{t("delete", :default => "Delete")}", '/' %> |
              </td>
            </tr>
        <% end -%>
      </table>
    </div>
  </div>


</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>