<!DOCTYPE html>
<html>
<head>
  <title>coMeeting</title>
  <%= stylesheet_link_tag 'web_app_theme' %>
  <!--<%= javascript_include_tag :all, :cache => true %>-->
  <!--<%= javascript_include_tag :defaults, :cache => true %>-->
  <%= javascript_include_tag "rails" %>
  <%= csrf_meta_tag %>

  <script>
  // When the document is loaded...
  $(document).ready(function()
  {
      // Scroll the whole document
      $('#main').localScroll({
         target:'body'
      });

  });
  </script>

</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/">coMeeting</a></h1>
      <div id="user-navigation">
        <ul class="wat-cf">
          <!--<li><a href="#"><%= t("profile", :default => "Profile") %></a></li>
          <li><a href="#"><%= t("settings", :default => "Settings") %></a></li>
          <li><a href="/logout" class="logout"><%= t("logout", :default => "Logout") %></a></li>-->
        </ul>
      </div>
      <div id="main-navigation">
        <ul class="wat-cf">
          <li class="first"><%= link_to t("about_us", :default => "About Us"), "/about-us" %></li>
        </ul>
      </div>
    </div>
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p>Copyright &copy; <%= Time.now.year %> coMeeting.</p>
          </div>
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>
  </div>
</body>
</html>
